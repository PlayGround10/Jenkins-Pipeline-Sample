pipeline {
    agent any

    environment {
     FOO = "foo"
   }

    stages {
        stage("build") {
            steps {
                echo 'building the application...'

                powershell label: "build the application",
				script: ".\\build.ps1"
            }            
        }

        stage("test") {
            when {
                expression {
                    env.BRANCH_NAME == 'dev'
                }
            }
            steps {
                echo 'testing the application'
            }
        }

        stage("deploy") {
            // steps {
            //     echo 'deploying the application'
            // }
            input {
                message "Do you want to proceed for  deployment?"
            }
            steps {
                echo 'echo "Deploying the application"'

            }        
        }

        stage("variable persistance check")  {
            steps {
                echo "FOO is ${env.FOO}"
                zip archive: true, dir: '\\ConsoleApp1\\bin\\Release\\net6.0\\', glob: '', zipFile: "${env.BUILD_NUMBER}.zip"
                archiveArtifacts artifacts: "${env.BUILD_NUMBER}.zip", 
			    fingerprint:true
            }
        }
    }

    // post {
        // always {
        //     // always execute after stages
            
        //     // copyArtifacts {
						
		// 	// 			flatten(true) //Note that we preserve the directory structure here so as to keep nunit exe in it's own directory structure.  But note that "Jenkins" will be a subfolder, so the PS1 need to cater for that

		// 	// 			optional(false)
		// 	// 			buildSelector {
		// 	// 				buildNumber( '\${PROMOTED_NUMBER}' )
		// 	// 			}
		// 	// 			targetDirectory("PromotionWorkDir")
		// 	// 		} //copyArtifacts
        // }
        // success {
            
        // }
        // failure {
        //     // If build fails
        // }
    // }
}