pipeline {
    agent any

    environment {
     FOO = "foo"
   }

    stages {
        stage("build") {
            steps {
                echo 'building the application...'

                powershell label: "build the application",
				script: ".\\build.ps1"
            }            
        }

        stage("test") {
            when {
                expression {
                    env.BRANCH_NAME == 'dev'
                }
            }
            steps {
                echo 'testing the application'
            }
        }

        stage("deploy") {
            // steps {
            //     echo 'deploying the application'
            // }
            input {
                message "Do you want to proceed for  deployment?"
            }
            steps {
                echo 'echo "Deploying the application"'

            }        
        }

        stage("variable persistance check")  {
            steps {
                echo "FOO is ${env.FOO}"
                archiveArtifacts artifacts:'\\ConsoleApp1\\bin\\Release\\net6.0\\**\\*.*', 
			    fingerprint:true
            }
        }
    }

    post {
        always {
            // always execute after stages
            
            copyArtifacts  fingerprintArtifacts: true, projectName: env.JOB_NAME, selector: env.BUILD_NUMBER, target: './archive_new'
        }
        // success {
            
        // }
        // failure {
        //     // If build fails
        // }
    }
}